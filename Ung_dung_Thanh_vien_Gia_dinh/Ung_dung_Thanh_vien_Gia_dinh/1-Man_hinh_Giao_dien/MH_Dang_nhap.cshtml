@{
    Layout = null;

    // TODO: Khởi động dữ liệu thành công. Tiếp theo lập trình giao diện và các chức năng.
    // ****************** Khởi động Dữ liệu Nguồn - Nội bộ *****************
    var Ung_dung = XL_UNG_DUNG.Khoi_dong_Ung_dung();
    var Nguoi_dung = Ung_dung.Khoi_dong_Nguoi_dung();


    // Khi người dùng bấm vô một cái button thì load lại màn hình này với tham số là
    // ****************** Khai báo và Khởi động giá trị đầu cho biến *******
    var Ma_so_Chuc_nang = Request["Th_Ma_so_Chuc_nang"];

    // ? Sao lại khởi động màn hình chính
    if (Ma_so_Chuc_nang == null)
    {
        Ma_so_Chuc_nang = Nguoi_dung.Chuc_nang_Dang_nhap.Ma_so;
    }


    // Chuỗi thông báo
    var Chuoi_Thong_bao = "";
    // Kiểm tra người dùng đã đăng nhập chưa

    // Chưa đăng nhập
    if (Nguoi_dung.Ten_Dang_nhap == null)
    {
        var Ten_Dang_nhap = Request["Th_Ten_Dang_nhap"];
        var Mat_khau = Request["Th_Mat_khau"];
        Chuoi_Thong_bao = Ung_dung.Dang_nhap(Ten_Dang_nhap, Mat_khau);

    }
    // Đã đăng nhập xong
    else
    {
        Response.Redirect("MH_Chinh.cshtml");
    }


}

<!doctype html>
<html lang="en">

<head>
    <title>Đăng nhập</title>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <!-- Bootstrap CSS v5.2.1 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link rel="stylesheet" href="styles.css">
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-light">
        </nav>

    </header>
    <main>
        <div class="container w-25">
            <h1>Màn hình đăng nhập</h1>
            <!-- Nếu đã có session thì sút qua màn hình chính luôn (redirection)-->
            <!-- Nếu sai thông tin đăng nhập thì giữ ở đây và thông báo sai thông tin đăng nhập -->
            <form action="#" method="post">
                <input type="hidden" name="Th_Ma_so_Chuc_nang" value="@Nguoi_dung.Chuc_nang_Dang_nhap.Ma_so" />
                <div class="mb-3">
                    <label for="username" class="form-label">Tên đăng nhập</label>
                    <input type="text" value="test" class="form-control" name="Th_Ten_Dang_nhap" id="username-input"
                           aria-describedby="helpId" placeholder="Tên đăng nhập" />
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Mật khẩu</label>
                    <input type="password" value="123" class="form-control" name="Th_Mat_khau" id="password-input"
                           aria-describedby="helpId" placeholder="Mật khẩu" />
                </div>
                <button type="submit" class="btn btn-primary">
                    @Nguoi_dung.Chuc_nang_Dang_nhap.Ten
                </button>

            </form>
            @Chuoi_Thong_bao
            Tài khoản test: "test" - "123"
        </div>
    </main>
    <footer>
        <!-- place footer here -->
    </footer>
    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/&#64;popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous">
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+" crossorigin="anonymous">
    </script>
</body>

</html>